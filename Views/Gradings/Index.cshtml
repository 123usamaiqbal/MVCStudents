@model IEnumerable<MVCStudents.Models.Grading>

@{
    ViewData["Title"] = "Index";
}

<h1>Grading Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GradingId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Computer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Physics)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Science)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GradingId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Computer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Physics)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Science)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-dark">Edit</a> 
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary">Details</a> 
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
